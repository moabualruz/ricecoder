{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Language Configuration Schema",
  "description": "Schema for language-specific configuration in ricecoder-lsp",
  "type": "object",
  "required": ["language", "extensions"],
  "properties": {
    "language": {
      "type": "string",
      "description": "Language identifier (e.g., 'rust', 'typescript', 'python')",
      "minLength": 1
    },
    "extensions": {
      "type": "array",
      "description": "File extensions for this language",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1
    },
    "parser_plugin": {
      "type": ["string", "null"],
      "description": "Parser plugin reference (e.g., 'tree-sitter-rust')"
    },
    "diagnostic_rules": {
      "type": "array",
      "description": "Diagnostic rules for this language",
      "items": {
        "$ref": "#/definitions/DiagnosticRule"
      }
    },
    "code_actions": {
      "type": "array",
      "description": "Code action transformations for this language",
      "items": {
        "$ref": "#/definitions/CodeActionTemplate"
      }
    }
  },
  "definitions": {
    "DiagnosticRule": {
      "type": "object",
      "required": ["name", "pattern", "severity", "message"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Rule name",
          "minLength": 1
        },
        "pattern": {
          "type": "string",
          "description": "Pattern to match (regex or simple pattern)",
          "minLength": 1
        },
        "severity": {
          "type": "string",
          "description": "Severity level",
          "enum": ["error", "warning", "info"]
        },
        "message": {
          "type": "string",
          "description": "Diagnostic message",
          "minLength": 1
        },
        "fix_template": {
          "type": ["string", "null"],
          "description": "Optional fix template"
        },
        "code": {
          "type": ["string", "null"],
          "description": "Rule code for identification"
        }
      }
    },
    "CodeActionTemplate": {
      "type": "object",
      "required": ["name", "title", "kind", "transformation"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Action name",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "description": "Action title",
          "minLength": 1
        },
        "kind": {
          "type": "string",
          "description": "Action kind",
          "enum": ["quickfix", "refactor", "source"]
        },
        "transformation": {
          "type": "string",
          "description": "Transformation template",
          "minLength": 1
        }
      }
    }
  }
}
